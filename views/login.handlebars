<form class="login-form">
    <h4 class="pt-3">Login Below</h4>
    <div class="form-group">
        <label for="username-login">Enter Username:</label>
        <input type="text" class="form-control" id="username-login" maxlength="150" placeholder="Username">
    </div>
    <div class="form-group">
        <label for="password-login">Enter Password:</label>
        <input type="password" class="form-control" id="password-login" maxlength="150" placeholder="Password">
    </div>
    <div>
        <button class="log-btn" type="submit">Login</button>
    </div>
</form>

<form class="signup-form">
    <h4 class="mt-3">OR Create an Account</h4>
    <div class="form-group">
        <label for="username-signup">Create a Username:</label>
        <input type="text" class="form-control" id="username-signup"  minlength="4" maxlength="150" placeholder="Username (Minimum 4 Characters)">
    </div>
    <div class="form-group">
        <label for="password-signup">Create Your Password:</label>
        <input type="password" class="form-control" id="password-signup" minlength="4" maxlength="150" placeholder="Password (Minimum 4 Characters)">
    </div>
    <div>
        <button class="log-btn" type="submit">Sign Up</button>
    </div>
</form>

<script src="/javascript/login.js"></script>