<div class="row">
    <div class="mt-4 col-12">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        {{post_text}}
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p class="date">By {{user.username}} on {{format_date created_at}}</p>
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</div>